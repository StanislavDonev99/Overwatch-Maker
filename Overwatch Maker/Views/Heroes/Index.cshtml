    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Health)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ability.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weapon.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HeroID }) |
            @Html.ActionLink("Details", "Details", new { id=item.HeroID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HeroID })
        </td>
    </tr>
